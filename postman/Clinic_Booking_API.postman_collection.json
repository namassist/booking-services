    {
      "name": "5. Double Booking Prevention",
      "item": [
        {
          "name": "5.1 Create First Booking",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// For double booking test, we need a DIFFERENT slot than 4.1",
                  "// Parse the available slots list and get the second one",
                  "var slotTime = pm.collectionVariables.get('slotStartTime') || '09:00';",
                  "",
                  "// Calculate next slot (add 30 minutes)",
                  "var parts = slotTime.split(':');",
                  "var hours = parseInt(parts[0]);",
                  "var minutes = parseInt(parts[1]);",
                  "minutes += 30;",
                  "if (minutes >= 60) {",
                  "  hours += 1;",
                  "  minutes -= 60;",
                  "}",
                  "var nextSlot = hours.toString().padStart(2, '0') + ':' + minutes.toString().padStart(2, '0');",
                  "",
                  "pm.collectionVariables.set('doubleBookingSlot', nextSlot);",
                  "console.log('Double booking test will use slot: ' + nextSlot + ' (different from 4.1 which used ' + slotTime + ')');"
                ],
                "type": "text/javascript"
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var statusCode = pm.response.code;",
                  "if (statusCode === 200) {",
                  "  pm.test('Status 200 - First booking created', () => pm.response.to.have.status(200));",
                  "  pm.test('Save bookingId for double booking test', () => {",
                  "    var json = pm.response.json();",
                  "    if (json.data) {",
                  "      pm.collectionVariables.set('doubleBookingId', json.data.id);",
                  "      pm.collectionVariables.set('doubleBookingSlot', json.data.slotStartTime.substring(0,5));",
                  "      console.log('Double booking test setup: created booking ' + json.data.id);",
                  "    }",
                  "  });",
                  "} else if (statusCode === 409) {",
                  "  // Slot already taken - this is fine, we can still test double booking",
                  "  pm.test('Slot already booked (will test duplicate)', () => true);",
                  "  console.log('Slot already booked - 5.2 will verify double booking prevention');",
                  "} else if (statusCode === 400) {",
                  "  pm.test('Invalid slot (skipped)', () => true);",
                  "  console.log('Bad request - slot may not be valid');",
                  "} else {",
                  "  pm.test('Unexpected status', () => pm.expect(statusCode).to.be.oneOf([200, 400, 409]));",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{patientToken}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"doctorId\": \"{{doctorId}}\",\n  \"bookingDate\": \"{{bookingDate}}\",\n  \"slotStartTime\": \"{{doubleBookingSlot}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/bookings",
              "host": ["{{baseUrl}}"],
              "path": ["api", "bookings"]
            }
          }
        },
        {
          "name": "5.2 Try Double Booking (Should Fail 409)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var statusCode = pm.response.code;",
                  "if (statusCode === 409) {",
                  "  pm.test('Status 409 Conflict', () => pm.response.to.have.status(409));",
                  "  pm.test('Error response', () => pm.expect(pm.response.json().success).to.equal(false));",
                  "  console.log('Double booking correctly rejected!');",
                  "} else if (statusCode === 400) {",
                  "  pm.test('Bad request (doctor may not be available)', () => true);",
                  "} else {",
                  "  pm.test('Should be 409 Conflict', () => pm.response.to.have.status(409));",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{patientToken}}" }
            ],
