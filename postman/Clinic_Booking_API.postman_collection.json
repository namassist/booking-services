        {
          "name": "3.5 Get Available Slots",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// Find valid booking dates starting from TOMORROW",
                  "var dates = [];",
                  "var today = new Date();",
                  "",
                  "for (var i = 1; i <= 14; i++) {",
                  "  var futureDate = new Date(today.getTime());",
                  "  futureDate.setDate(today.getDate() + i);",
                  "  var dayOfWeek = futureDate.getDay();",
                  "  // Only include weekdays (Mon=1 to Fri=5)",
                  "  if (dayOfWeek >= 1 && dayOfWeek <= 5) {",
                  "    var dateStr = futureDate.toISOString().split('T')[0];",
                  "    dates.push(dateStr);",
                  "  }",
                  "}",
                  "",
                  "// Log for debugging",
                  "console.log('Today: ' + today.toISOString().split('T')[0]);",
                  "console.log('Available future dates: ' + dates.slice(0, 5).join(', '));",
                  "",
                  "// Set first valid weekday (TOMORROW or later)",
                  "pm.collectionVariables.set('bookingDate', dates[0]);",
                  "pm.collectionVariables.set('datesToTry', JSON.stringify(dates));"
                ],
                "type": "text/javascript"
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', () => pm.response.to.have.status(200));",
                  "",
                  "var json = pm.response.json();",
                  "var slots = json.data || [];",
                  "var availableSlots = slots.filter(s => s.available === true);",
                  "",
                  "if (availableSlots.length > 0) {",
                  "  // Found available slots, save the first available slot time",
                  "  pm.collectionVariables.set('slotStartTime', availableSlots[0].startTime.substring(0, 5));",
                  "  pm.test('Has available slots', () => pm.expect(availableSlots.length).to.be.above(0));",
                  "  console.log('Found slots on ' + pm.collectionVariables.get('bookingDate') + ': ' + availableSlots.length + ' available');",
                  "} else {",
                  "  // No slots on this day, try next day",
                  "  var datesToTry = JSON.parse(pm.collectionVariables.get('datesToTry') || '[]');",
                  "  var currentDate = pm.collectionVariables.get('bookingDate');",
                  "  var currentIndex = datesToTry.indexOf(currentDate);",
                  "  if (currentIndex < datesToTry.length - 1) {",
                  "    pm.collectionVariables.set('bookingDate', datesToTry[currentIndex + 1]);",
                  "    console.log('No slots on ' + currentDate + ', will try ' + datesToTry[currentIndex + 1]);",
                  "    // Note: You may need to manually retry this request",
                  "  }",
                  "  pm.test('Looking for slots (retry if needed)', () => true);",
                  "}",
                  "",
                  "// Default slot time if none found",
                  "if (!pm.collectionVariables.get('slotStartTime')) {",
                  "  pm.collectionVariables.set('slotStartTime', '09:00');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
