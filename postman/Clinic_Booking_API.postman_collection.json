                  "  pm.test('Save bookingId', () => {",
                  "    var json = pm.response.json();",
                  "    if (json.data && json.data.id) {",
                  "      pm.collectionVariables.set('bookingId', json.data.id);",
                  "      pm.collectionVariables.set('hasBooking', 'true');",
                  "      console.log('Booking created: ' + json.data.id);",
                  "    }",
                  "  });",
                  "} else if (statusCode === 400) {",
                  "  pm.test('Booking skipped (no valid slot/schedule)', () => true);",
                  "  pm.collectionVariables.set('hasBooking', 'false');",
                  "  console.log('No valid slot available - dependent tests will skip');",
                  "} else if (statusCode === 409) {",
                  "  pm.test('Slot already booked', () => true);",
                  "  pm.collectionVariables.set('hasBooking', 'false');",
                  "} else {",
                  "  pm.test('Unexpected error', () => pm.expect(statusCode).to.be.oneOf([200, 400, 409]));",
