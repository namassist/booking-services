              "mode": "raw",
              "raw": "{\n  \"doctorId\": \"{{doctorId}}\",\n  \"bookingDate\": \"{{bookingDate}}\",\n  \"slotStartTime\": \"{{doubleBookingSlot}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/bookings",
              "host": ["{{baseUrl}}"],
              "path": ["api", "bookings"]
            }
          }
        },
